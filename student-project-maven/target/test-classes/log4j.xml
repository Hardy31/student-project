<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <!--
                appender - описывает приемник данных
    -->
    <appender name="fileAppender" class="org.apache.log4j.RollingFileAppender">
        <param name="maxFileSize" value="1KB"/>
        <param name="maxBackupIndex" value="2"/>
        <!-- Полный путь к файлу-->
        <param name="File" value="target/logfile_test.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} - %m%n"/>
        </layout>
    </appender>

    <appender name="fileAppender2" class="org.apache.log4j.RollingFileAppender">
        <param name="maxFileSize" value="1KB"/>
        <param name="maxBackupIndex" value="2"/>
        <!-- Полный путь к файлу-->
        <param name="File" value="target/logfile_test_2.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} - %m%n"/>
        </layout>
    </appender>


    <!--
            category - пакеты в которых будет работать Logger
    -->
    <category name="edo.javacourse.studentorder">
        <priority value="all"/>
        <appender-ref ref="fileAppender"/>
        <appender-ref ref="fileAppender2"/>
    </category>
</log4j:configuration>